<div>
    {{ form_start(form, { 'action': path('vs_application_application_handle', {'applicationId': applicationId}), 'attr': {'id': 'formApplicationEdit'} }) }}
        <div class="formFields">
        	<div class="form-check form-check-secondary mb-3">
                <input type="checkbox" id="application_form_enabled" name="application_form[enabled]" 
                    class="form-check-input"
                    {% if form.vars.value.enabled %}checked="checked"{% endif %}
                />
                <label class="form-check-label" for="application_form_enabled">
                    {{ 'vs_application.form.enabled' | trans( {},'VSApplicationBundle' ) }}
                </label>
            </div>
    
            <div class="form-group">
                {{ form_label(form.title, null, {
                    'label_attr': {'class': 'form-label'}
                    }) 
                }}
        
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.hostname, null, {
                    'label_attr': {'class': 'form-label'}
                    }) 
                }}
        
                {{ form_widget(form.hostname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>