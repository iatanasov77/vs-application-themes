<!doctype html>
<html lang="{{ app.request.locale|slice(0, 2) }}"
    data-layout="vertical"
    data-topbar="light"
    data-sidebar="dark"
    data-sidebar-size="lg"
    data-sidebar-image="none"
    data-preloader="disable"
>
    <head>
        <title>{% block title %}.:: {{ applicationTitle | trans( {},'VSApplicationBundle' ) }}{% endblock %}</title>

        {% block head_meta %}
            <meta charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
            <meta content="Themesbrand" name="author" />
            
            <!-- App favicon -->
            <link rel="shortcut icon" type="image/svg+xml" href="{{ asset( applicationIcon ) }}" />
        {% endblock %}

        {% block head_styles %}            
            {{ encore_entry_link_tags( 'css/app', null, 'VelzonTheme' ) }}
        {% endblock %}

        {% block head_scripts %}
            {{ encore_entry_script_tags( 'js/layout', null, 'VelzonTheme' ) }}
        {% endblock %}
    </head>
    
    <body>
        <div class="auth-page-wrapper pt-5">
            <!-- auth page bg -->
            <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
                <div class="bg-overlay"></div>
    
                <div class="shape">
                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                        <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                    </svg>
                </div>
            </div>
    
            <!-- auth page content -->
            <div class="auth-page-content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center text-white-50">
                                <div>
                                    <a href="javascript:void(0);" class="d-inline-block auth-logo">
                                        <img src="{{ asset( applicationIcon ) }}" alt="" height="150" style="margin-left: -60px;">
                                    </a>
                                </div>
                                <p class="mt-3 fs-15 fw-medium">{{ applicationCompany | trans( {},'VSApplicationBundle' ) }}</p>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->
                    
                    {% block content %}{% endblock %}
                    
                </div>
                <!-- end container -->
            </div>
        </div>
        
        <!-- Modal Dialogs -->
        {% block modals %}{% endblock %}
        
        <!-- Optional JavaScript -->
        {% block body_scripts %}
            {{ encore_entry_script_tags( 'js/app-login', null, 'VelzonTheme' ) }}
        {% endblock %}
    </body>
</html>