<div id="modalUserInfo" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    {{ 'vs_users.template.userscrud_userinfo_title' | trans( {},'VSUsersBundle' ) }}
				</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> </button>
            </div>
            <div class="modal-body">
                <div id="cardUserInfo" class="card">
                    <div class="card-body"></div>
                </div>
            </div>
            <div class="modal-footer" id="imContainer">
                <button type="button" class="btn btn-primary" id="btnSaveUserInfo">
                    {{ 'vs_application.form.save' | trans( {},'VSApplicationBundle' ) }}
				</button>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
					{{ 'vs_application.form.cancel' | trans( {},'VSApplicationBundle' ) }}
				</button>
            </div>
        </div>
    </div>
</div>
